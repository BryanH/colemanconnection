        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      
      <div id='mast' class='container'>
        <%= link_to root_path_for(current_user), id: 'mast-logo' do %>
        <h1>HCC Coleman Connection</h1>
        <%- end -%>
      </div>

      <%- if signed_in? -%>

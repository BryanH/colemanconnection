<div class='row'>
  <div class='span4'>
    <div class='boxed'>
      <ul class='menu'>
        <li><%= link_to "Show Active Users", employee_users_path, class: ('active' unless params.has_key?(:active)) %></li>
        <li><%= link_to "Show Inactive Users", employee_users_path(active: false), class: ('active' if params.has_key?(:active)) %></li>
      </ul>
    </div>
    
    <div class='boxed'>
      <ul class='menu'>
        <li><%= link_to "Add New User", '#' %></li>
      </ul>
    </div>
  </div>
  
  <div class="span8">
    <div class="boxed-main">
      <header>
        <h1>
          <%= params[:active] ? "Inactive" : "Active" %> Users List
          <form class="form-search pull-right">
            <input type="text" name='q' class="input-medium search-query">
            <%= hidden_field :active, false if params[:active] %>
            <button type="submit" class="btn">Search</button>
          </form>
        </h1>
      </header>
      <ol class="menu menu-list">
        <%- @users.each do |user| -%>
          <%= content_tag_for :li, user do %>
            <%= user.reversed_name %> <small class='metadata'>( <%= user.email %> )</small>
            <section class='pull-right'>
              <%- if params[:active] -%>
              <span class='label label-link'><%= link_to 'activate' %></span>
              <%- else -%>
              <span class='label label-link'><%= link_to 'permissions' %></span>
              <span class='label label-link'><%= link_to 'account settings', edit_employee_user_path(user) %></span>
              <%- unless user === current_user -%>
              <span class='label label-important label-link'>
                <%= link_to 'deactivate', '#', confirm: 'Once deactivated, the user will no longer be able to access the system.',
                            data: { confirm_title: 'Are you sure?', confirm_proceed: 'Deactivate' } %>
              </span>
              <%- end -%>
              <%- end -%>
            </section>
          <%- end -%>
        <%- end -%>
      </ol>
    </div>
    <%= will_paginate @users, class: 'pagination pagination-centered' %>
  </div>
</div>
<div class='collapse-group'>
  <div class='collapse-heading'>
    <%= link_to 'Transcripts (Internal)', '#', class: 'collapse-toggle', data: { toggle: 'collapse', target: ".collapse-transcripts-internal" } %>
  </div>
  <div class='collapse collapse-transcripts-internal'>
    <div class='collapse-content'>
      <div class='tabbable tabs-left'>
        <ul class='nav nav-tabs'>
          <%- @peoplesoft_candidate.internal_transcripts.sort_by {|trans| trans[:descr] }.each_with_index do |record, index| -%>
          <li class='<%= 'active' if index.zero? %>'><%= link_to record[:descr], "##{record[:class_nbr]}", class: 'affixable', data: { toggle: 'tab'} %></li>
          <%- end -%>
        </ul>
        <div class='tab-content'>
          <%- @peoplesoft_candidate.internal_transcripts.each_with_index do |record, index| -%>
          <div class='tab-pane <%= 'active' if index.zero? %>' id='<%= record[:class_nbr] %>'>
            <table class='table table-striped table-bordered'>
              <tbody>
                <%- record.each_pair do |kee, val| -%>
                <tr>
                  <td class='attr'><%= kee.to_s.titleize %></td>
                  <td><%= val %></td>
                </tr>
                <%- end -%>
              </tbody>
            </table>
          </div>
          <%- end -%>
        </div>
      </div>
    </div>
  </div>
</div>
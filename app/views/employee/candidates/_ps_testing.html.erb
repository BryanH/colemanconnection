<div class='collapse-group'>
  <div class='collapse-heading'>
    <%= link_to 'Testing Information', '#', class: 'collapse-toggle', data: { toggle: 'collapse', target: ".collapse-test-details" } %>
  </div>
  <div class='collapse collapse-test-details'>
    <div class='collapse-content'>
      <div class='tabbable tabs-left'>
        <ul class='nav nav-tabs'>
          <%- @peoplesoft_candidate.test_sections.each_with_index do |record, index| -%>
          <li class='<%= 'active' if index.zero? %>'><%= link_to "#{record[:test_id]} ( #{record[:subject_3]}-#{record[:test_component]} )", "##{record[:test_id]}#{record[:trnsfr_eqvlncy_grp]}", data: { toggle: 'tab'} %></li>
          <%- end -%>
        </ul>
        <div class='tab-content'>
          <%- @peoplesoft_candidate.test_sections.each_with_index do |record, index| -%>
          <div class='tab-pane <%= 'active' if index.zero? %>' id='<%= record[:test_id] %><%= record[:trnsfr_eqvlncy_grp] %>'>
            <table class='table table-striped table-bordered'>
              <tbody>
                <%- record.each_pair do |kee, val| -%>
                <tr>
                  <td class='attr'><%= kee.to_s.titleize %></td>
                  <td><%= val %></td>
                </tr>
                <%- end -%>
              </tbody>
            </table>
          </div>
          <%- end -%>
        </div>
      </div>
    </div>
  </div>
</div>